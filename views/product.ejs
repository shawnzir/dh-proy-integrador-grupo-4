<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include("./partials/head") %>
	<!-- Head -->

	<body>
		<% if(locals.usuario) { %>
			<%- include("./partials/headerLogueado") %>
			   <% } else { %>
				<%- include("./partials/header") %>
				<% } %>

			<!-- product detail -->
			<div class="container products-wrapper">
				<div class="d-flex align-items-center">
					<h2 class="products-title fjalla">
						<%= producto.producto  %>
					</h2>
					<p class="product-detail-description">
						<a href="/product/product-add">Editar</a>
					</p>
				</div>

				<div class="product-detail ubuntu">
					<div class="row">
						<article class="col-12 col-lg-8 product-detail-info">
							<img class="product-detail-img" src="/images/products/autos/<%=producto.foto%>">
							<p class="product-detail-description desc">
								
								<%= producto.descripcion %>
							</p>
						</article>

						


						<div class="col-12 col-lg-4">
							<section class="comments">
								

									<article>
										
										
											
		
										<h3>Comentarios:</h3>

										<div class="data">
											<p class="user">
												 <a href="/profile">
													<% for (let i = 0; i < producto.comentarios.length; i++) { %>
														<strong><p><%= producto.comentarios[i].usuario.usuario  %></p></strong>	
														<p><%= producto.comentarios[i].comentario %></p>
													<% } %>
													</a> 
													
											</p>

											
										</div>

									</article>
									
							</section>

							<% if(locals.usuario) { %>

							<form action="/product/<%= producto.id %>" method="POST" class="form">
								<label for="comentario" ></label>
								<input type="text" name="comentario" placeholder="agregar comentario">
								<% if (locals.error && error.comentario) { %>
									<p style="color: red;"><%= error.comentario.msg %></p>
								<% } %>
								<button type="submit" class="buy-now-button ">AGREGAR COMENTARIO</button>
							</form>
							<% } else { %>
							<h3>Debes estar logueado para comentar</h3>
							<% } %>
							
							<% if(locals.usuario && locals.usuario.id == producto.usuario_id) { %> 
								<h2>  <a href=""> Publicado por <%= producto.usuario.usuario %></a>   </h2>
								<form action="/product/eliminar/<%= producto.id %>" method="POST" class="form">
									<button type="submit" name="eliminar" class=" ">Eliminar Publicacion</button>
								</form>
								<% } else { %>
									
									<h2>  <a href=""> Publicado por <%= producto.usuario.usuario %></a>   </h2>
								<% } %>
							
							
							
							
						</div>
						
					</div>
					
				</div>
			</div>
			<!-- /product detail -->
			<!-- footer -->
			<%- include("./partials/footer") %>
				<!-- /footer -->

	</body>

</html>