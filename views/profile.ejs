<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include("./partials/head") %>
	<!-- Head -->

	<body>
		<!-- Header -->
		<%- include("./partials/headerLogueado") %>
			<!-- /Header -->

			<!-- Datos del usuario -->
			<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
							<% if(user.foto){ %>
								<img src="images/users/pibe gris.jpg" alt="foto de perfil" class="foto-perfil">
							<% }else{ %>
								<img src="images/users/default-image.png" alt="foto de perfil" class="foto-perfil">
							<% } %>
					</div>
					<div class="data-container col-6">
						<div class="d-flex align-items-center ">
							<h1 class="main-title fjalla">
								<% if (user) { %>
									<%= user.usuario %>
										<% } %>
											<a href="/profile-edit">
												<i class="fas fa-cog"></i>
											</a>
							</h1>
							<a class="btn mt-3 ml-4" href="">SEGUIR</a>
						</div>
						<div class="ubuntu">
							<ul class="">
								<% if (user) { %>
									<li>
										<%=user.email%>
									</li>
									<% } %>
										<li><%= productos.length %> productos</li>
										<li>200 seguidores</li>
										<li><%= productos.comentarios?productos.comentarios.length:"0" %> comentarios</li>
							</ul>
						</div>
					</div>
				</div>
			</section>
			<!-- /Datos del usuario -->



			<!-- Mis productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title fjalla ">Mis productos</h2>
					</div>
					<% for(let i = 0; i < productos.length; i++) { %>
						<div class="col-12 col-sm-6 col-lg-3 ubuntu">
							
							<section class="product-box">
								<a href="/product/<%= productos[i].id  %>">
									<figure class="product-box_image">
										<figure class="product-box_image" style="background-image: url(images/products/autos/<%=productos[i].foto%>)"></figure>
									</figure>
									
									<article class="product-box_data ">
										<h2>
											<%= productos[i].producto %>
										</h2>
										<p>
											<%= productos[i].descripcion %>
										</p>
										<% if(productos[i].comentarios){ %>
											<p>Comentarios: <%= productos[i].comentarios.length %></p>
										<% } %>
									</article>
								</a>
							</section>
						</div>
					<% } %>
				</div>
			</div>
			<!-- Mis productos -->


			<!-- footer -->
			<%- include("./partials/footer") %>
				<!-- /footer -->
	</body>

</html>